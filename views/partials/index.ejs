<%- include('header.ejs')%>
  <%- include('homenavbar.ejs')%>

    <body>
      <div class="container">
        <div class="jumbotron">
          <h1 class="display-4">Bem vindo ao Blog - Perguntas e Respostas</h1>
          <p class="lead">Este projeto é realizado em NODEJS e MySQL</p>
          <hr class="my-4">
          <p>Dependências Utilizadas: </p>
          <hr>
          <div class="" style="display: inline;">
            <a href="https://www.npmjs.com/package/body-parser" role="button" target="_blank"><button type="button"
                class="btn btn-outline-secondary">Body-Parser</button></a>
            <a href="https://ejs.co/" role="button" target="_blank"><button type="button"
                class="btn btn-outline-secondary">%EJS%</button></a>
            <a href=" https://expressjs.com/pt-br/" role="button" target="_blank"><button type="button"
                class="btn btn-outline-secondary">ExpressJS</button></a>
            <a href="https://www.npmjs.com/package/mysql2" role="button" target="_blank"><button type="button"
                class="btn btn-outline-secondary">MySQL2</button></a>
            <a href="https://nodemon.io/" role="button" target="_blank"><button type="button"
                class="btn btn-outline-secondary">Nodemon</button></a>
            <a href="https://sequelize.org/" role="button" target="_blank"><button type="button"
                class="btn btn-outline-secondary">Sequelize</button></a>
            <a href="https://slugify.online/" role="button" target="_blank"><button type="button"
                class="btn btn-outline-secondary">slugify</button></a>
          </div>
          <hr>
          <p class="lead">
            <a class="btn btn-primary btn-lg" href="https://www.github.com/alessandrop76" role="button"
              target="_blank">See me moore</a>
          </p>
        </div>
      </div>
      <hr>
      <br />
      <div class="container">
        <% articles.forEach(article=> { %>
          <div class="card">
            <div class="card-header">
              <%= article.title %>
            </div>
            <div class="card-body">
              <a href="/<%= article.slug %>" class="btn btn-success">Ler artigos</a>
            </div>
          </div>
          <br />
          <% }) %>

      </div>
      <br />

    </body>

    <%- include('footer.ejs')%>